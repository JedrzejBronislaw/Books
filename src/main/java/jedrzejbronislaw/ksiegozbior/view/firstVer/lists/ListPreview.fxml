<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_CENTER" type="VBox" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="title" text="Label" textAlignment="CENTER" />
      <ListView fx:id="list" maxHeight="300.0" onMouseClicked="#clickAction" prefWidth="200.0" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button mnemonicParsing="false" onAction="#addAction" text="%add" />
            <Button mnemonicParsing="false" onAction="#editAction" text="%edit" />
          <Button mnemonicParsing="false" onAction="#deleteAction" text="%delete" />
        </buttons>
      </ButtonBar>
   </children>
</fx:root>
